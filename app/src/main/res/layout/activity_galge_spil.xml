<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GalgeSpil"
    android:background="#ffffff">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="205dp"
        android:id="@+id/imageView"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/editTextGuess"
        android:layout_alignBottom="@+id/buttonGuess"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/buttonGuess"
        android:hint="Indtast Bogstav" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GÃ¦t"
        android:id="@+id/buttonGuess"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewWord"
        android:gravity="center"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewInfo"
        android:layout_below="@+id/textViewWord"
        android:layout_alignStart="@+id/textViewWord"
        android:gravity="center" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewCount"
        android:layout_below="@+id/textViewInfo"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewUsed"
        android:layout_below="@+id/textViewCount"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
